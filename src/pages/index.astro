---
import Layout from "@/layouts/Layout.astro";
import {
  supabase,
  type GiftCard,
  type GiftCardCategory,
  type UserProfile,
} from "@/lib/supabase";

// Verificar autenticación
const {
  data: { session },
} = await supabase.auth.getSession();
let user: UserProfile | null = null;

if (session) {
  const { data } = await supabase
    .from("profiles")
    .select("*")
    .eq("id", session.user.id)
    .single();
  user = data;
}

// Obtener categorías
const { data: categories } = await supabase
  .from("giftcard_categories")
  .select("*")
  .eq("is_active", true)
  .order("name");

// Obtener giftcards con stock disponible (solo las que tienen stock > 0)
const categoryFilter = Astro.url.searchParams.get("categoria");
const sortBy = Astro.url.searchParams.get("orden") || "nombre";
const searchQuery = Astro.url.searchParams.get("buscar") || "";

let query = supabase
  .from("giftcards")
  .select(
    `
    *,
    category:giftcard_categories(*)
  `,
  )
  .eq("is_active", true)
  .gt("stock", 0);

if (categoryFilter) {
  query = query.eq("category_id", categoryFilter);
}

// Búsqueda por nombre
if (searchQuery) {
  query = query.ilike("name", `%${searchQuery}%`);
}

// Ordenamiento
switch (sortBy) {
  case "precio-asc":
    query = query.order("price", { ascending: true });
    break;
  case "precio-desc":
    query = query.order("price", { ascending: false });
    break;
  case "reciente":
    query = query.order("created_at", { ascending: false });
    break;
  default:
    query = query.order("name");
}

const { data: giftcards } = await query;

// Contar total de productos disponibles
const totalProducts = giftcards?.length || 0;

// Obtener nombre de categoría seleccionada
const selectedCategory = categories?.find((c: any) => c.id === categoryFilter);
const pageTitle = searchQuery 
  ? `Resultados para "${searchQuery}"` 
  : selectedCategory 
    ? selectedCategory.name 
    : "Todos los Productos";
---

<Layout title="GiftCard Store - Las mejores giftcards al mejor precio">
  <div class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950">
    
    <!-- Primera sección: Pantalla completa (Header + Hero + Categorías) -->
    <section class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="sticky top-0 z-50 bg-slate-950/95 backdrop-blur-xl border-b border-white/10">
        <!-- Fila superior: Logo, Buscador, Usuario -->
        <div class="container mx-auto px-4 py-3 md:py-4">
          <div class="flex items-center justify-between gap-4">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 shrink-0">
              <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="text-xl font-bold text-white hidden sm:block">GiftCard Store</span>
            </a>

            <!-- Buscador centrado -->
            <div class="flex-1 max-w-2xl">
              <form action="/" method="GET" class="w-full relative">
                <input 
                  type="text" 
                  name="buscar" 
                  placeholder="¿Qué estás buscando?" 
                  value={Astro.url.searchParams.get('buscar') || ''}
                  class="w-full px-4 py-2.5 md:py-3 pr-12 bg-slate-800 border border-white/10 rounded-lg text-sm text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                />
                <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 bg-primary hover:bg-primary/90 text-white p-2 rounded-lg transition-all">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </button>
              </form>
            </div>

            <!-- Usuario -->
            <div class="flex items-center gap-4 shrink-0">
              {
                user ? (
                  <div class="flex items-center gap-4">
                    <div class="hidden sm:block text-right">
                      <p class="text-sm text-white font-medium">
                        {user.full_name}
                      </p>
                      <p class="text-xs text-gray-400 capitalize">{user.role}</p>
                    </div>
                    <div class="relative group">
                      <button class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center text-primary font-semibold">
                        {user.full_name?.charAt(0).toUpperCase()}
                      </button>
                      <div class="absolute right-0 top-12 w-48 bg-slate-800 rounded-lg shadow-xl border border-white/10 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
                        <div class="p-2">
                          {user.role === "admin" && (
                            <a href="/admin/dashboard" class="block px-4 py-2 text-sm text-gray-300 hover:bg-white/5 rounded-lg">
                              Panel Admin
