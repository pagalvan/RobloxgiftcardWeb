        </div>
      </header>

    <!-- Primera sección: Pantalla completa (Hero + Categorías) -->
    <section id="hero-section" class="flex flex-col hero-viewport">
      <!-- Hero Banner -->
      <div class="flex-1 flex flex-col">
        <div class="flex-1 relative overflow-hidden">
          <img
            src="/hero-banner.png"
            alt="Regalos de Temporada - Descubre las mejores ofertas en tus juegos favoritos"
            class="w-full h-full object-cover object-center absolute inset-0"
          />
        </div>

        <!-- Categorías / Marcas -->
        <div
          class="py-6 md:py-8 bg-gradient-to-b from-slate-950/90 to-slate-950"
        >
          <div class="container mx-auto px-4">
            <div class="flex flex-wrap justify-center gap-6 md:gap-10">
              <a
                href="/tienda?categoria=Roblox"
                class="category-card group flex flex-col items-center gap-2 md:gap-3 p-4 md:p-6 rounded-2xl hover:shadow-2xl hover:shadow-primary/30 transition-all duration-300 cursor-pointer"
              >
                <div
                  class="w-16 h-16 md:w-20 md:h-20 flex items-center justify-center rounded-xl overflow-hidden group-hover:scale-110 transition-transform duration-300"
                >
                  <img
                    src="/robloxlogo.png"
                    alt="Roblox"
                    class="w-full h-full object-contain"
                  />
                </div>
                <span
                  class="text-xs md:text-sm font-bold text-white tracking-wide group-hover:text-primary transition-colors"
                  >ROBLOX</span
                >
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <main class="container mx-auto px-4 py-16">
      <!-- Products Section Header -->
      <div
        class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8"
      >
        <div>
          <h1 class="text-2xl md:text-3xl font-bold text-white">
            Nuestras GiftCards <span class="text-gray-500 font-normal"
              >({totalProducts})</span
            >
          </h1>
          <p class="text-gray-400 mt-1">{pageTitle}</p>
        </div>

        <div class="flex items-center gap-4">
          <div class="relative">
            <select
              id="sort-select"
              class="appearance-none bg-white/10 border-0 rounded-lg px-4 py-2 pr-10 text-sm text-gray-300 cursor-pointer hover:bg-white/20 transition-all focus:ring-2 focus:ring-primary"
              onchange="handleSort(this.value)"
            >
              <option value="nombre" selected={sortBy === "nombre"}
                >Ordenar por nombre</option
              >
              <option value="precio-asc" selected={sortBy === "precio-asc"}
                >Precio: menor a mayor</option
              >
              <option value="precio-desc" selected={sortBy === "precio-desc"}
                >Precio: mayor a menor</option
              >
              <option value="reciente" selected={sortBy === "reciente"}
                >Más recientes</option
              >
            </select>
            <svg
              class="absolute right-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400 pointer-events-none"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </div>
      </div>

      {/* Grid de GiftCards */}
      {
        giftcards && giftcards.length > 0 ? (
          <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-4 md:gap-6">
            {giftcards.map((card: any, index: number) => (
              <a
                href={`/giftcard/${card.id}`}
                class="product-card group bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 hover:border-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-primary/10"
                style={`animation-delay: ${index * 50}ms`}
              >
                <div class="relative aspect-square bg-gradient-to-br from-slate-800 to-slate-900 overflow-hidden">
                  {card.image_url ? (
                    <img
                      src={card.image_url}
                      alt={card.name}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <div class="text-5xl font-bold text-slate-700 group-hover:scale-110 transition-transform duration-500">
                        {card.name?.charAt(0)}
                      </div>
                    </div>
                  )}
                  {card.original_price && card.original_price > card.price && (
                    <span class="absolute top-2 left-2 bg-green-500 text-white text-xs font-bold px-2 py-0.5 rounded-full shadow-lg">
                      -
                      {Math.round((1 - card.price / card.original_price) * 100)}
                      %
                    </span>
                  )}
                  <span
                    class:list={[
                      "absolute top-2 right-2 text-xs font-semibold px-2 py-0.5 rounded-full shadow-lg flex items-center gap-1",
                      card.stock > 10
                        ? "bg-green-500 text-white"
                        : "bg-amber-500 text-white",
                    ]}
                  >
                    <span class="w-1.5 h-1.5 rounded-full bg-current opacity-75 animate-pulse" />
                    {card.stock > 10 ? "Stock" : card.stock}
                  </span>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center pb-4">
                    <span class="bg-white text-slate-900 px-4 py-1.5 rounded-full text-sm font-semibold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                      Ver detalles
                    </span>
                  </div>
                </div>
                <div class="p-3 md:p-4">
                  <span class="inline-block text-xs font-medium text-gray-400 bg-white/10 px-2 py-0.5 rounded-full mb-2">
                    {card.category?.name}
                  </span>
                  <h3 class="font-semibold text-white text-sm md:text-base group-hover:text-primary transition-colors mb-2 line-clamp-1">
                    {card.name}
                  </h3>
                  <div class="flex items-baseline gap-2">
                    <span class="text-lg md:text-xl font-bold text-white">
                      ${card.price.toFixed(2)}
                    </span>
                    {card.original_price &&
                      card.original_price > card.price && (
                        <span class="text-xs md:text-sm text-gray-500 line-through">
                          ${card.original_price.toFixed(2)}
                        </span>
                      )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="flex flex-col items-center justify-center py-20 px-4">
            <div class="relative mb-8">
              <div class="w-32 h-32 bg-gradient-to-br from-slate-800 to-slate-900 rounded-full flex items-center justify-center">
                <svg
                  class="w-16 h-16 text-slate-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                  />
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3 text-center">
              Próximamente más productos
            </h3>
            <p class="text-gray-400 text-center max-w-md mb-8 leading-relaxed">
              Estamos trabajando para traerte las mejores ofertas en giftcards.
              ¡Vuelve pronto!
            </p>
          </div>
        )
      }
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/10 mt-16 bg-slate-950">
      <div class="container mx-auto px-4 py-4">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-4"
        >
          <div class="flex items-center gap-2">
            <img
              src="/Reload.svg"
              alt="Reload"
              class="h-8 w-auto"
            />
          </div>
          <p class="text-gray-500 text-sm">
            © 2026 Reload. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  .product-card {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .product-card:hover {
    transform: translateY(-4px);
  }
  .product-card img {
    will-change: transform;
  }
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .category-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px -12px rgba(239, 68, 68, 0.25);
  }
  .category-card img {
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .category-card:hover img {
    transform: scale(1.15);
  }
  
  /* Animación del logo */
  .logo-container {
    position: relative;
    overflow: hidden;
    padding-right: 0;
    transition: padding-right 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .logo-container:hover {
    padding-right: 110px;
  }
  
  .logo-icon {
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    z-index: 2;
  }
  
  .logo-text {
    position: absolute;
    left: 30px;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0;
    z-index: 1;
    transition: left 0.5s cubic-bezier(0.34, 1.56, 0.64, 1),
                opacity 0.3s ease-out;
  }
  
  .logo-container:hover .logo-icon {
    transform: scale(1.05);
  }
  
  .logo-container:hover .logo-text {
    left: 60px;
    opacity: 1;
  }

  /* Animación del banner marquee */
  .marquee-container {
    overflow: hidden;
    width: 100%;
  }
  
  .marquee-text {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    animation: marquee 20s linear infinite;
    padding-left: 100%;
  }
  
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  
  .marquee-text:hover {
    animation-play-state: paused;
  }

  /* Banner estático */
  .static-banner-container {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .static-banner-text {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Hero viewport dinámico */
  .hero-viewport {
    min-height: calc(100vh - var(--header-height, 130px));
  }
</style>

<script>
  // Calcular altura del header dinámicamente
  function updateHeroHeight() {
    const header = document.querySelector('header');
    const banner = document.getElementById('promo-banner');
    const heroSection = document.getElementById('hero-section');
    
    if (heroSection) {
      let totalHeight = 0;
      if (header) totalHeight += header.offsetHeight;
      if (banner && banner.style.display !== 'none') totalHeight += banner.offsetHeight;
      
      heroSection.style.minHeight = `calc(100vh - ${totalHeight}px)`;
    }
  }
  
  // Ejecutar al cargar y al redimensionar
  updateHeroHeight();
  window.addEventListener('resize', updateHeroHeight);
  
  // Observer para cuando se cierre el banner
  const bannerEl = document.getElementById('promo-banner');
  if (bannerEl) {
    const observer = new MutationObserver(updateHeroHeight);
    observer.observe(bannerEl, { attributes: true, attributeFilter: ['style'] });
  }

  // Custom Dropdown functionality
  const dropdownTrigger = document.getElementById('dropdown-trigger');
  const dropdownMenu = document.getElementById('dropdown-menu');
  const dropdownArrow = document.getElementById('dropdown-arrow');
  const dropdownLabel = document.getElementById('dropdown-label');
  const categoriaInput = document.getElementById('categoria-input') as HTMLInputElement;
  const dropdownOptions = document.querySelectorAll('.dropdown-option');

  let isDropdownOpen = false;

  function toggleDropdown() {
    isDropdownOpen = !isDropdownOpen;
    if (isDropdownOpen) {
      dropdownMenu?.classList.remove('opacity-0', 'invisible', 'scale-95');
      dropdownMenu?.classList.add('opacity-100', 'visible', 'scale-100');
      dropdownArrow?.classList.add('rotate-180');
    } else {
      dropdownMenu?.classList.add('opacity-0', 'invisible', 'scale-95');
      dropdownMenu?.classList.remove('opacity-100', 'visible', 'scale-100');
      dropdownArrow?.classList.remove('rotate-180');
    }
  }

  function closeDropdown() {
    isDropdownOpen = false;
    dropdownMenu?.classList.add('opacity-0', 'invisible', 'scale-95');
    dropdownMenu?.classList.remove('opacity-100', 'visible', 'scale-100');
    dropdownArrow?.classList.remove('rotate-180');
  }

  dropdownTrigger?.addEventListener('click', (e) => {
    e.preventDefault();
    e.stopPropagation();
    toggleDropdown();
  });

  dropdownOptions.forEach((option) => {
    option.addEventListener('click', (e) => {
      e.preventDefault();
      const value = (option as HTMLElement).dataset.value || '';
      const label = (option as HTMLElement).dataset.label || 'Categorías';
      
      if (categoriaInput) categoriaInput.value = value;
      if (dropdownLabel) dropdownLabel.textContent = label;
      
      closeDropdown();
    });
  });

  // Cerrar dropdown al hacer clic fuera
  document.addEventListener('click', (e) => {
    const dropdown = document.getElementById('category-dropdown');
    if (dropdown && !dropdown.contains(e.target as Node)) {
      closeDropdown();
    }
  });

  function handleSort(value: string) {
    const url = new URL(window.location.href);
    url.searchParams.set("orden", value);
    window.location.href = url.toString();
  }
  (window as any).handleSort = handleSort;
</script>
