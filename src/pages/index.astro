---
import Layout from "@/layouts/Layout.astro";
import { supabase } from "@/lib/supabase";
import { DollarSign, Zap, ShieldCheck } from "lucide-react";
import StoreNavbar from "@/components/StoreNavbar.astro";

// Verificar si el usuario ya está autenticado
const {
  data: { session },
} = await supabase.auth.getSession();
if (session) {
  // Obtener rol del usuario
  const { data: profile } = await supabase
    .from("profiles")
    .select("role")
    .eq("id", session.user.id)
    .single();

  // Redirigir según el rol
  if (profile?.role === "admin") {
    return Astro.redirect("/admin/dashboard");
  } else if (profile?.role === "proveedor") {
    return Astro.redirect("/proveedor/dashboard");
  } else {
    return Astro.redirect("/tienda");
  }
}
---

<Layout title="Inicio">
