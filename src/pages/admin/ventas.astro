---
import Layout from "@/layouts/Layout.astro";
import { supabase } from "@/lib/supabase";
import AdminSidebar from "@/components/AdminSidebar.astro";

// Verificar autenticación y rol de admin
const {
    data: { session },
} = await supabase.auth.getSession();

if (!session) {
    return Astro.redirect("/auth/login");
}

const { data: user } = await supabase
    .from("profiles")
    .select("*")
    .eq("id", session.user.id)
    .single();

if (user?.role !== "admin") {
    return Astro.redirect("/tienda");
}

// Obtener ventas
const { data: purchases } = await supabase
    .from("purchases")
    .select(
        `
    *,
    user:profiles(full_name, email),
    giftcard:giftcards(name, image_url),
    code:giftcard_codes(code)
  `,
    )
    .order("created_at", { ascending: false });
---

<Layout title="Gestionar Ventas">
    <div class="min-h-screen bg-slate-900">
        <AdminSidebar activePage="ventas" user={user} />

        <!-- Main Content -->
        <main class="ml-64 p-8">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-white">Ventas</h1>
                <p class="text-gray-400 mt-1">
                    Historial de transacciones de la tienda
                </p>
            </div>

            <!-- Tabla de Ventas -->
            <div
                class="bg-slate-800/50 rounded-xl border border-white/10 overflow-hidden"
            >
                <table class="w-full">
                    <thead class="bg-slate-800">
                        <tr>
                            <th
                                class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                >Cliente</th
                            >
                            <th
                                class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                >Producto</th
                            >
                            <th
                                class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                >Código</th
                            >
                            <th
                                class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                >Precio</th
                            >
                            <th
                                class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                >Fecha</th
                            >
                            <th
                                class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
                                >Estado</th
                            >
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/5">
                        {
                            purchases && purchases.length > 0 ? (
                                purchases.map((purchase: any) => (
                                    <tr class="hover:bg-white/5">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center text-primary font-bold">
                                                    {purchase.user?.full_name
                                                        ?.charAt(0)
                                                        .toUpperCase() || "?"}
                                                </div>
                                                <div>
                                                    <p class="text-white font-medium">
                                                        {purchase.user
                                                            ?.full_name ||
                                                            "Usuario desconocido"}
                                                    </p>
                                                    <p class="text-xs text-gray-400">
                                                        {purchase.user?.email}
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                {purchase.giftcard
                                                    ?.image_url && (
                                                    <img
                                                        src={
                                                            purchase.giftcard
                                                                .image_url
                                                        }
                                                        alt={
                                                            purchase.giftcard
                                                                .name
                                                        }
                                                        class="w-8 h-8 object-contain rounded"
                                                    />
                                                )}
                                                <span class="text-gray-300">
                                                    {purchase.giftcard?.name ||
                                                        "Producto eliminado"}
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 font-mono text-sm text-gray-400">
                                            {purchase.code?.code ||
                                                "No disponible"}
                                        </td>
                                        <td class="px-6 py-4 text-green-400 font-semibold">
                                            ${purchase.amount.toFixed(2)}
                                        </td>
                                        <td class="px-6 py-4 text-gray-400">
                                            {new Date(
                                                purchase.created_at,
                                            ).toLocaleString("es-ES")}
                                        </td>
                                        <td class="px-6 py-4">
                                            <span
                                                class:list={[
                                                    "px-2 py-1 rounded-full text-xs font-medium",
                                                    purchase.status ===
                                                    "completed"
                                                        ? "bg-green-500/20 text-green-400"
                                                        : "bg-yellow-500/20 text-yellow-400",
                                                ]}
                                            >
                                                {purchase.status === "completed"
                                                    ? "Completado"
                                                    : "Pendiente"}
                                            </span>
                                        </td>
                                    </tr>
                                ))
                            ) : (
                                <tr>
                                    <td
                                        colspan="6"
                                        class="px-6 py-12 text-center text-gray-400"
                                    >
                                        No hay ventas registradas
                                    </td>
                                </tr>
                            )
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</Layout>
