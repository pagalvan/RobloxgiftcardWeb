---
import Layout from "@/layouts/Layout.astro";
import { supabase, type UserProfile } from "@/lib/supabase";
import {
  DollarSign,
  Users,
  CreditCard,
  Ticket,
  Plus,
  Tag,
  UserPlus,
} from "lucide-react";
import AdminSidebar from "@/components/AdminSidebar.astro";

// Verificar autenticación y rol de admin
const {
  data: { session },
} = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect("/auth/login");
}

const { data: user } = await supabase
  .from("profiles")
  .select("*")
  .eq("id", session.user.id)
  .single();

if (user?.role !== "admin") {
  return Astro.redirect("/tienda");
}

// Obtener estadísticas
const { count: totalUsers } = await supabase
  .from("profiles")
  .select("*", { count: "exact", head: true });

const { data: salesData } = await supabase
  .from("purchases")
  .select("amount")
  .eq("status", "completed");

const totalRevenue =
  salesData?.reduce(
    (sum: number, p: { amount: number }) => sum + p.amount,
    0,
  ) || 0;

const { count: totalGiftcards } = await supabase
  .from("giftcards")
  .select("*", { count: "exact", head: true });

const { count: availableCodes } = await supabase
  .from("giftcard_codes")
  .select("*", { count: "exact", head: true })
  .eq("is_sold", false);

const { count: totalSales } = await supabase
  .from("purchases")
  .select("*", { count: "exact", head: true })
  .eq("status", "completed");

// Obtener últimas compras
const { data: recentPurchases } = await supabase
  .from("purchases")
  .select(
    `
    *,
    user:profiles(full_name, email),
    giftcard:giftcards(name)
  `,
  )
  .order("created_at", { ascending: false })
  .limit(5);
---

<Layout title="Panel Admin">
  <div class="min-h-screen bg-slate-900">
    <AdminSidebar activePage="dashboard" user={user} />

    <!-- Main Content -->
    <main class="ml-64 p-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-white">Dashboard</h1>
        <p class="text-gray-400 mt-1">Resumen general del sistema</p>
      </div>

      <!-- Stats Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-slate-800/50 rounded-xl p-6 border border-white/10">
          <div class="flex items-center justify-between mb-4">
            <div
              class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center"
            >
              <Users className="w-6 h-6 text-blue-400" client:load />
            </div>
          </div>
          <p class="text-3xl font-bold text-white">{totalUsers || 0}</p>
          <p class="text-sm text-gray-400">Usuarios Registrados</p>
        </div>

        <div class="bg-slate-800/50 rounded-xl p-6 border border-white/10">
          <div class="flex items-center justify-between mb-4">
            <div
              class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center"
            >
              <DollarSign className="w-6 h-6 text-green-400" client:load />
            </div>
          </div>
          <p class="text-3xl font-bold text-white">
            ${totalRevenue.toFixed(2)}
          </p>
          <p class="text-sm text-gray-400">Ingresos Totales</p>
        </div>

        <div class="bg-slate-800/50 rounded-xl p-6 border border-white/10">
          <div class="flex items-center justify-between mb-4">
            <div
              class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center"
            >
              <CreditCard className="w-6 h-6 text-purple-400" client:load />
            </div>
          </div>
          <p class="text-3xl font-bold text-white">{totalGiftcards || 0}</p>
          <p class="text-sm text-gray-400">Productos</p>
        </div>

        <div class="bg-slate-800/50 rounded-xl p-6 border border-white/10">
          <div class="flex items-center justify-between mb-4">
            <div
              class="w-12 h-12 bg-yellow-500/20 rounded-lg flex items-center justify-center"
            >
              <Ticket className="w-6 h-6 text-yellow-400" client:load />
            </div>
          </div>
          <p class="text-3xl font-bold text-white">{availableCodes || 0}</p>
          <p class="text-sm text-gray-400">Códigos Disponibles</p>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Recent Sales -->
        <div class="bg-slate-800/50 rounded-xl border border-white/10">
          <div class="p-6 border-b border-white/10">
            <h2 class="text-lg font-semibold text-white">Ventas Recientes</h2>
          </div>
          <div class="p-6">
            {
              recentPurchases && recentPurchases.length > 0 ? (
                <div class="space-y-4">
                  {recentPurchases.map((sale: any) => (
                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center text-primary text-sm font-bold">
                          {sale.user?.full_name?.charAt(0).toUpperCase() || "?"}
                        </div>
                        <div>
                          <p class="text-sm text-white font-medium">
                            {sale.user?.full_name}
                          </p>
                          <p class="text-xs text-gray-400">
                            {sale.giftcard?.name}
                          </p>
                        </div>
                      </div>
                      <span class="text-green-400 font-semibold">
                        +${sale.amount.toFixed(2)}
                      </span>
                    </div>
                  ))}
                </div>
              ) : (
                <p class="text-gray-400 text-center py-8">
                  No hay ventas recientes
                </p>
              )
            }
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-slate-800/50 rounded-xl border border-white/10">
          <div class="p-6 border-b border-white/10">
            <h2 class="text-lg font-semibold text-white">Acciones Rápidas</h2>
          </div>
          <div class="p-6 space-y-4">
            <a
              href="/admin/giftcards"
              class="flex items-center gap-4 p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-all"
            >
              <div
                class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center"
              >
                <Plus className="w-5 h-5 text-primary" client:load />
              </div>
              <div>
                <p class="text-white font-medium">Agregar GiftCard</p>
                <p class="text-xs text-gray-400">Crear nuevo producto</p>
              </div>
            </a>
            <a
              href="/admin/categorias"
              class="flex items-center gap-4 p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-all"
            >
              <div
                class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center"
              >
                <Tag className="w-5 h-5 text-blue-400" client:load />
              </div>
              <div>
                <p class="text-white font-medium">Gestionar Categorías</p>
                <p class="text-xs text-gray-400">Administrar categorías</p>
              </div>
            </a>
            <a
              href="/admin/usuarios"
              class="flex items-center gap-4 p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-all"
            >
              <div
                class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center"
              >
                <UserPlus className="w-5 h-5 text-green-400" client:load />
              </div>
              <div>
                <p class="text-white font-medium">Gestionar Usuarios</p>
                <p class="text-xs text-gray-400">Cambiar roles y permisos</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
