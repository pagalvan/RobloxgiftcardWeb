---
import Layout from "@/layouts/Layout.astro";
import { supabase, type GiftCard, type GiftCardCategory } from "@/lib/supabase";

// Get ID from params
const { id } = Astro.params;

if (!id) {
    return Astro.redirect("/admin/giftcards");
}

// Check auth
const {
    data: { session },
} = await supabase.auth.getSession();

if (!session) {
    return Astro.redirect("/auth/login");
}

const { data: user } = await supabase
    .from("profiles")
    .select("*")
    .eq("id", session.user.id)
    .single();

if (user?.role !== "admin") {
    return Astro.redirect("/tienda");
}

// Handle updates
let message = "";
let error = "";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const name = formData.get("name")?.toString();
    const categoryId = formData.get("category_id")?.toString();
    const denomination = parseFloat(
        formData.get("denomination")?.toString() || "0",
    );
    const price = parseFloat(formData.get("price")?.toString() || "0");
    const description = formData.get("description")?.toString();
    const imageUrl = formData.get("image_url")?.toString();
    const isActive = formData.get("is_active") === "on";

    const { error: updateError } = await supabase
        .from("giftcards")
        .update({
            name,
            category_id: categoryId,
            denomination,
            price,
            description,
            image_url: imageUrl,
            is_active: isActive,
        })
        .eq("id", id);

    if (updateError) {
        error = updateError.message;
    } else {
        return Astro.redirect("/admin/giftcards");
    }
}

// Fetch Data
const { data: giftcard } = await supabase
    .from("giftcards")
    .select("*")
    .eq("id", id)
    .single();

if (!giftcard) {
    return Astro.redirect("/admin/giftcards");
}

const { data: categories } = await supabase
    .from("giftcard_categories")
    .select("*")
    .order("name");
