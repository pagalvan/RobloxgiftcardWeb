                                    name="category_id"
                                    required
                                    class="w-full px-4 py-2 bg-slate-900 border border-white/10 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
                                >
                                    <option value="">Seleccionar...</option>
                                    {
                                        categories?.map(
                                            (cat: GiftCardCategory) => (
                                                <option
                                                    value={cat.id}
                                                    selected={
                                                        cat.id ===
