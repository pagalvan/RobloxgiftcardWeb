---
import type { UserProfile } from "@/lib/supabase";

interface Props {
    user: UserProfile | null;
    activePage?: string;
}

const { user, activePage } = Astro.props;
---

<header
    class="sticky top-0 z-50 bg-slate-900/80 backdrop-blur-xl border-b border-white/10"
>
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <a href="/" class="flex items-center gap-2">
                <img src="/Reload.svg" alt="Reload" class="h-12 w-auto" />
            </a>

            <nav class="hidden md:flex items-center gap-6">
                <a
                    href="/tienda"
                    class:list={[
                        "font-medium transition-colors",
                        activePage === "tienda"
                            ? "text-primary"
                            : "text-gray-400 hover:text-white",
                    ]}
                >
                    Tienda
                </a>
                {
                    user && (
                        <a
                            href="/mis-compras"
                            class:list={[
                                "font-medium transition-colors",
                                activePage === "mis-compras"
                                    ? "text-primary"
                                    : "text-gray-400 hover:text-white",
                            ]}
                        >
                            Mis Compras
                        </a>
                    )
                }
            </nav>

            <div class="flex items-center gap-4">
                {
                    user ? (
                        <div class="flex items-center gap-4">
                            <div class="hidden sm:block text-right">
                                <p class="text-sm text-white font-medium">
                                    {user.full_name}
                                </p>
                                <p class="text-xs text-gray-400 capitalize">
                                    {user.role}
                                </p>
                            </div>
                            <div class="relative group">
                                <button class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center text-primary font-semibold">
                                    {user.full_name?.charAt(0).toUpperCase()}
                                </button>
                                <div class="absolute right-0 top-12 w-48 bg-slate-800 rounded-lg shadow-xl border border-white/10 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
                                    <div class="p-2">
                                        {user.role === "admin" && (
                                            <a
                                                href="/admin/dashboard"
                                                class="block px-4 py-2 text-sm text-gray-300 hover:bg-white/5 rounded-lg"
                                            >
                                                Ir al Panel Admin
                                            </a>
                                        )}
                                        {user.role === "proveedor" && (
                                            <a
                                                href="/proveedor/dashboard"
                                                class="block px-4 py-2 text-sm text-gray-300 hover:bg-white/5 rounded-lg"
                                            >
                                                Ir al Panel Proveedor
                                            </a>
                                        )}
                                        <a
                                            href="/mis-compras"
                                            class="block px-4 py-2 text-sm text-gray-300 hover:bg-white/5 rounded-lg"
                                        >
                                            Mis Compras
                                        </a>
                                        <hr class="my-2 border-white/10" />
                                        <a
                                            href="/auth/logout"
                                            class="block px-4 py-2 text-sm text-red-400 hover:bg-white/5 rounded-lg"
                                        >
                                            Cerrar Sesión
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ) : (
                        <div class="flex items-center gap-3">
                            <a
                                href="/auth/login"
                                class="text-gray-400 hover:text-white transition-colors text-sm"
                            >
                                Iniciar Sesión
                            </a>
                            <a
                                href="/auth/register"
                                class="bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all"
                            >
                                Registrarse
                            </a>
                        </div>
                    )
                }
            </div>
        </div>
    </div>
</header>
